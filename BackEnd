import random
import re


class Bot:

    start = input("Type Here: ")
    opening = ""
    token = ""
    
    index_funds = ['SPY', 'NASDAQ', 'Dow Jones', 'Gold Select']
    credit_bureaus = ["Experian", "Transunion", "Equifax"]
    exit = ["Bye", "Goodbye", "See Ya", "Quit", "Exit", "End", "Stop"]
    greetings = ["Hi", 'Hello', 'Hey there!']
    exit_reponses = ["Come back if you have more questions!","Have a great day!"]
    credit = #Matrix Var score scale
    test = {credit: '*credit*',

           }

    def greeting(self):
        self.opening = input("Hello, I am your personal finance chatbot! What's your name? ")


    def quit(self):
        print(random.choice(self.exit_reponses))
            

    def invest(self):
        if input == "*best stock today*":
            print(random.choice(index_funds))
    
    def allChat(self):
        if self.token != self.opening:
            while True:
                self.token = input("What would you like to talk about? ")  

    def mainLoop(self):
        const = True
        
        while const == True:
            
            if self.start in self.greetings:
                bot.greeting()
                open = True
                
            elif self.start not in self.greetings:
                open = False
                x = True
                if x == True:
                    self.token = input(random.choice(self.greetings))
                    x = False
                elif x == False:
                    return bot.mainLoop()
                    
                
            if self.opening >= "":
                if open ==  True:
                    self.token = input(f"Nice to meet you {self.opening}! What part of finance or investing are you interested in? ")
            
            if self.token not in self.opening:
                bot.allChat()    


        if self.token in self.exit:
                bot.quit()
                const = False
            
                
    
        if self.token in "*credit*": 
            self.token = input("What is your credit score? ")

                          

bot = Bot()
bot.mainLoop()
